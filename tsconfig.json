{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "moduleResolution": "node",
    },
    "include": ["src", "src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}